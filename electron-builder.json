{
  "appId": "com.rugbusiness.invoice",
  "productName": "Rug Invoice System",
  "directories": {
    "output": "electron-dist"
  },
  "files": [
    "out/**/*",
    "electron.js",
    "preload.js",
    "node_modules/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
